@using Legal.Ner.Domain.Metadata
@using PagedList.Mvc
@model PagedList.IPagedList<SparqlPredefinedNamespacePrefix>

@{
    ViewBag.Title = "Prefijos SPARQL";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <br />
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Prefijos SPARQL</h3>
                        </div>
                    </div>
                </div>
                <br />
                <div class="panel-body">
                    <table id="entitiesTable" class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>
                                <th>
                                    Prefijo
                                </th>
                                <th>
                                    Uri
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (SparqlPredefinedNamespacePrefix item in Model)
                            {
                                <tr>
                                    <td class="col-sm-2">
                                        @Html.DisplayFor(modelItem => item.Prefix)
                                    </td>
                                    <td class="col-md-2">
                                        @Html.DisplayFor(modelItem => item.Uri)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <span>Página</span> @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) <span>de</span> @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, searchString = ViewBag.SearchString }), new PagedListRenderOptions { DelimiterBetweenPageNumbers = "|", LinkToFirstPageFormat = "<< Primera", LinkToPreviousPageFormat = "< Anterior", LinkToNextPageFormat = "Siguiente >", LinkToLastPageFormat = "Ultima >>" })
                </div>
            </div>
        </div>
    </div>
</div>
