@using Legal.Ner.Domain;
@using PagedList.Mvc;
@model PagedList.IPagedList<FileKey>

@{
    ViewBag.Title = "Documentos";
    Layout = "../Shared/_Layout.cshtml";
}

<br/>
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Cargar Documento</h2>
            @using (Html.BeginForm("Index", "FileKey", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div>
                    @Html.TextBox("file", "", new { type = "file", accept = ".kaf" }) <br />
                    <input type="submit" value="Cargar" />
                    @*@ViewBag.Message*@
                </div>
            }
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Documentos</h3>
                        </div>
                    </div>
                </div>
                <br/>
                <div class="panel-body">

                    @using (Html.BeginForm())
                    {
                        <p>
                            Buscar por Documento: @Html.TextBox("SearchString")
                            <input type="submit" value="Buscar"/>
                        </p>
                    }

                    <table id="entitiesTable" class="table table-striped table-bordered table-list">
                        <thead>
                        <tr>
                            <th>
                                Archivo
                            </th>
                            <th>
                                Documento
                            </th>
                            <th>
                                Fecha de Publicación
                            </th>
                            <th>
                                Número Norma
                            </th>
                            <th>
                                Acciones
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (FileKey item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FileName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DocumentTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Number)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new {id = item.Id}) |
                                    @Html.ActionLink("Detalle", "Details", new {id = item.Id}) |
                                    @Html.ActionLink("Eliminar", "Delete", new {id = item.Id}) |
                                    @Html.ActionLink("Entidades", "Index", "EntityBulk", new {fileKeyId = item.Id}, null)
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    <br/>
                    <span>Página</span> @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) <span>de</span> @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("Index", new {page = page, searchString = ViewBag.SearchString}), new PagedListRenderOptions {DelimiterBetweenPageNumbers = "|", LinkToFirstPageFormat = "<< Primera", LinkToPreviousPageFormat = "< Anterior", LinkToNextPageFormat = "Siguiente >", LinkToLastPageFormat = "Ultima >>"})
                </div>
            </div>
        </div>
    </div>
</div>