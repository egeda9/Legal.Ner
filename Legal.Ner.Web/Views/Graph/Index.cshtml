@model Legal.Ner.Web.Models.GraphRelationViewModel

@{
    ViewBag.Title = "Relacionar Nodos";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">

        @using (Html.BeginForm("Index", "Graph", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-control-long" }))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <br />
            <h4>Relacionar Nodos</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <input type="hidden" id="hdnSourceLabel" name="SourceLabel" />
            <input type="hidden" id="hdnTargetLabel" name="TargetLabel" />
            
            @{
                var selectedSource = Model.Sources.FirstOrDefault();
                var selectedTarget = Model.Targets.FirstOrDefault();
            }
            

            <div class="form-group">
                @Html.LabelFor(model => model.SelectedSource)
                <div class="col-lg-10">
                    @Html.DropDownListFor(x => Model.SelectedSource, new SelectList(Model.Sources, "NodeLabels", "Label"), htmlAttributes: new { @class = "form-control", id = "ddlSource" })
                    @Html.ValidationMessageFor(model => model.SelectedSource, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SelectedObjectProperty)
                <div class="col-lg-10">
                    @Html.DropDownListFor(x => Model.SelectedObjectProperty, new SelectList(Model.ObjectProperties, "Uri", "Label"), htmlAttributes: new { @class = "form-control", id = "ddlObjectProperty" })
                    @Html.ValidationMessageFor(model => model.SelectedObjectProperty, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SelectedTarget)
                <div class="col-lg-10">
                    @Html.DropDownListFor(x => Model.SelectedTarget, new SelectList(Model.Targets, "NodeLabels", "Label"), htmlAttributes: new { @class = "form-control", id = "ddlTarget" })
                    @Html.ValidationMessageFor(model => model.SelectedTarget, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </div>
        </div>
        }
    </div>
</div>
